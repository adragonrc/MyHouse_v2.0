<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape>
            <gradient
                android:startColor="@color/secondaryColor"
                android:endColor="@color/secondaryColor"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="#45a9da" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/secondaryDarkColor"
                android:endColor="@color/secondaryDarkColor"
                android:angle="270" />
            <stroke
                android:width="1px"
                android:color="@color/secondaryLightColor" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>